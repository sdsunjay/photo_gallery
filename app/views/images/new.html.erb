<h2>Add New Image</h2>

<%= form_for @image, :html => {:multipart => true}  do |f| %>
    <% if @image.errors.any? %>
        <% @image.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %> </div>
        <% end %>
    <% end %>
    <div class="form-group">
        <%= f.label :image_title %><br />
        <%= f.text_field :image_title, class:'form-control' %><br />
    </div>
    <div class="form-group">
        <%= f.label :category %><br />
        <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class:'form-control' %><br />
    </div>
    <div class="form-group">
        <%= f.label :image_description %><br />
        <%= f.text_field :image_description, class:'form-control' %><br />
    </div>
    <div class="form-group">
        <%= f.label :image %><br />
        <%= f.file_field :image, class:'form-control' %><br />
    </div>
    <div class="form-group">
        <%= f.label :remote_image_url, 'or image url' %><br />
        <%= f.file_field :remote_image_url, class:'form-control' %><br />
    </div>
    <%= f.submit "Submit", class:'btn btn-primary' %>
    <%=link_to "Cancel", categories_path, class:'btn btn-default' %>
<%end %>
